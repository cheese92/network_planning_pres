\setlength{\beamer@descdefault}{1cm}
\newcommand\logoleftright[2]
	{\setbeamertemplate{logo left}{#1}\setbeamertemplate{logo right}{#2}}
\def\insertlogoleft{\usebeamertemplate*{logo left}}
\def\insertlogoright{\usebeamertemplate*{logo right}}
\newcommand\logos[1]{%
\ifthenelse{\equal{#1}{none}}%
	{\logoleftright{}{}}{}%
\ifthenelse{\equal{#1}{left}}%
	{\logoleftright{\logopdcolor[7mm]\hspace{1mm}\coldei[2mm]}{}}{}%
\ifthenelse{\equal{#1}{right}}%
	{\logoleftright{}{\logopdcolor[7mm]\hspace{1mm}\coldei[2mm]}}{}%
\ifthenelse{\equal{#1}{split}}%
	{\logoleftright{\logopdcolor[7mm]}{\coldei[2mm]}}{}%
}
\setbeamertemplate{sidebar left}
{
  \vfill%
  \rlap{\hskip0.1cm\insertlogoleft}%
  \vskip2pt%
}

\setbeamertemplate{sidebar right}
{
  \vfill%
  \llap{\insertlogoright\hskip0.1cm}%
  \vskip2pt%
%  \llap{\usebeamertemplate***{navigation symbols}\hskip0.1cm}%
%  \vskip2pt%
}

\setbeamertemplate{footline}{%
    \begin{beamercolorbox}[colsep=1.5pt]{upper separation line foot}
    \end{beamercolorbox}
    \begin{beamercolorbox}[ht=2.5ex,dp=1.125ex,%
      leftskip=.3cm,rightskip=.3cm plus1fil]{author in head/foot}%
      \leavevmode{\usebeamerfont{author in head/foot}\insertshortauthor}%
      \hfill%
      {\usebeamerfont{title in head/foot}\insertshorttitle}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[ht=2.5ex,dp=1.125ex,%
      leftskip=.3cm,rightskip=.3cm plus1fil]{title in head/foot}%
      {\usebeamerfont{institute in head/foot}\usebeamercolor[fg]{institute in head/foot}\insertshortinstitute}%
      \hfill%
      \raisebox{-2pt}{\usebeamertemplate***{navigation symbols}\hskip0.1cm}%
%      {\usebeamerfont{date in head/foot}\insertdate}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[colsep=1.5pt]{lower separation line foot}
    \end{beamercolorbox}}

\mode<all>
